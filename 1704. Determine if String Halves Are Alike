class Solution {
public:
    bool halvesAreAlike(string s) {
        int n1=s.size();
        int n2=n1/2;
        int c1=0,c2=0;
        for(int i=0;i<n2;i++)
        {
            if(s[i]=='a' || s[i]=='e' || s[i]=='i' || s[i]=='o' || s[i]=='u' || s[i]=='A' || s[i]=='E' || s[i]=='I' || s[i]=='O' || s[i]=='U' )
                c1++;
        }
        for(int i=n2;i<n1;i++)
        {
            if(s[i]=='a' || s[i]=='e' || s[i]=='i' || s[i]=='o' || s[i]=='u' || s[i]=='A' || s[i]=='E' || s[i]=='I' || s[i]=='O' || s[i]=='U')
                c2++;
        }
        if(c1==c2)
            return true;
        else
            return false;
    }
};
