class Solution {
public:
    bool isPowerOfTwo(int n) {
        if(n==1 || n==2)return true;
        while(n>2)
        {
            if(n%2==0) 
            {
                n=n/2;
                if(n==2)
                return true;
            }
            else
                return false;
        }
        return false;
    }
};
